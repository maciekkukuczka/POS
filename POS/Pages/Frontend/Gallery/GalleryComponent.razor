@inherits GalleryComponentBase

@if (Items == null)
{
    <em>Wczytuje...</em>
}
else
{
    <div class="container">
        <div class="row">
            <div class="col d-flex flex-row  justify-content-between">

                @foreach (var item in Items)
                {
                    <div class="card  my-3 @(isGalleryExpanded ? "w-100" : "w-25")">
                        @if (item.Images != null && item.Images.Count > 0)
                        {
                            @if (isGalleryExpanded)
                            {
                                foreach (var itemImage in item.Images)
                                {
                                    <div class="w-100 text-center">
                                        <img class="gallery-image" src="@itemImage.Path" alt="Card image cap">
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="w-100 text-center">
                                    <img class="gallery-image" src="@item.Images.FirstOrDefault().Path" alt="Card image cap">
                                </div>
                            }
                        }
                        <div class="card-body d-flex justify-content-between">
                            <h5 class="card-title">@item.Name</h5>

                            <div>
                                <button class="btn btn-outline-primary  @(isGalleryExpanded ? "gallery-expanded" : "")"
                                        @onclick="() => ExpandGallery(item)">
                                    Więcej...
                                </button>
                            </div>
                        </div>

                    </div>
                }
            </div>
        </div>
    </div>
}